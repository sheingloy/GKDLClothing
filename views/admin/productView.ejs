<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        button{
            margin-top: 25px;
        }
        a{
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-5">Product Management</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Details</th>
                    <th>Size</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (products && products.length) { %>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.id %></td>
                            <td><%= product.name %></td>
                            <td><%= product.category %></td>
                            <td><%= product.details %></td>
                            <td><%= product.size %></td>
                            <td><%= product.price %></td>
                            <td><img src="/uploads/<%= product.image %>" alt="<%= product.name %>" width="100" height="100"></td>
                            <td>
                                <form action="/admin/products/update/<%= product.id %>" method="GET">
                                    <button type="submit" class="btn btn-warning">Update</button>
                                </form>
                                <form action="/admin/products/delete/<%= product.id %>" method="GET">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="8">No products found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <button class="btn btn-dark"><a href="../dashboard">Back</a></button>
    </div>
</body>
</html>