<%- include('partials/start') %>
<%- include('partials/header') %>

<div class="container mt-5">
    <h1 class="text-center">Available Products</h1>
    <div class="row">
        <% if (products && products.length > 0) { %> <!-- Check if products are defined and not empty -->
            <% products.forEach(product => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="card-text">Category: <%= product.category %></p>
                            <p class="card-text">Details: <%= product.details %></p>
                            <p class="card-text">Size: <%= product.size %></p>
                            <p class="card-text">Price: <%= product.price %> PHP</p>
                            <a href="#" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-center">No products available at the moment.</p>
        <% } %>
    </div>
</div>

<%- include('partials/script') %>
<%- include('partials/footer') %>
